<div id="inventory-container">
  <h1>Current Inventory</h1>
  <% @inventories.each do |inventory| %>
    <div><br>
      <div class="content-title">Item name: <%= link_to inventory.name, inventory_path(inventory) %></div><br>
      Item description: <%= inventory.description %><br>
      Item price: $<%= inventory.price %><br><br>
      <div id='modify-inventory-buttons'>
        <%= link_to "Edit", edit_inventory_path(inventory) %>
        <%= link_to "Delete", inventory_path(inventory), :method => 'delete' %>
      </div>
      <br><hr>
    </div>
  <% end %>
  <div>
    <%= link_to "Add new", new_inventory_path %><br>
  </div>
</div>
